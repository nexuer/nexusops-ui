{
  "extends": "@nexuer/tsconfig/base.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "module": "esnext",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.mts",
    "./**/*.tsx",
    "./**/*.vue"
  ]
}
